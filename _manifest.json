{
  "manifest_version": 1,
  "id": "Eric.llm_message_guard_plugin",
  "name": "LLM结构化消息守卫插件",
  "version": "1.0.0",
  "description": "通过运行时Monkey Patch将replyer单段prompt改为结构化messages，缓解上下文注入与伪造机器人发言混淆。",
  "author": {
    "name": "Eric-Terminal"
  },
  "license": "GPL-v3.0-or-later",
  "host_application": {
    "min_version": "0.12.0"
  },
  "homepage_url": "https://github.com/MaiM-with-u/maibot",
  "repository_url": "https://github.com/MaiM-with-u/maibot",
  "keywords": [
    "llm",
    "security",
    "prompt",
    "message-factory",
    "replyer"
  ],
  "categories": [
    "Security",
    "LLM"
  ],
  "default_locale": "zh-CN",
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "runtime_patch",
    "components": [
      {
        "type": "event_handler",
        "name": "llm_message_guard_on_start",
        "description": "启动时应用replyer运行时补丁"
      },
      {
        "type": "event_handler",
        "name": "llm_message_guard_on_stop",
        "description": "停止时恢复replyer原始方法"
      }
    ],
    "features": [
      "结构化messages请求",
      "真实身份判定assistant角色",
      "相邻同人同角色消息合并",
      "失败自动回退原始调用"
    ]
  }
}
